{
  "hosting": [
    {
      "target": "original",  
      "public": "dist/Webkert-nyari-tabor-foglalo",
      "rewrites": [{ "source": "**", "destination": "/index.html" }],
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
    {
      "target": "new",       
      "public": "dist/Webkert-nyari-tabor-foglalo",
      "rewrites": [{ "source": "**", "destination": "/index.html" }],
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    }
  ],
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "database": "(default)",
    "rules": "tabor.firestore.rules",
    "indexes": "tabor.firestore.indexes.json"
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "database": {
      "port": 9000
    },
    "hosting": {
      "port": 5000
    },
    "storage": {
      "port": 9199
    },
    "ui": {
      "enabled": true,
      "port": 420
    },
    "singleProjectMode": true
  },
  "remoteconfig": {
    "template": "remoteconfig.template.json"
  }
}
